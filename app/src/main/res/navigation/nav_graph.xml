<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.curs_alexander.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.curs_alexander.ui.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.curs_alexander.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/healthMeasurementsFragment"
        android:name="com.example.curs_alexander.ui.measurements.HealthMeasurementsFragment"
        android:label="HealthMeasurements" />

    <fragment
        android:id="@+id/healthMeasurementAddFragment"
        android:name="com.example.curs_alexander.ui.measurements.HealthMeasurementAddFragment"
        android:label="HealthMeasurementAdd" />

</navigation>
