<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSystolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6200EE"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDiastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="#888888"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Индикатор для систолического: фон + полоска поверх -->
    <FrameLayout
        android:id="@+id/containerSystolic"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:background="#EEEEEE">

        <View
            android:id="@+id/foregroundSystolic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#EAD7FF" />
    </FrameLayout>

    <!-- Индикатор для диастолического -->
    <FrameLayout
        android:id="@+id/containerDiastolic"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:background="#F6F6F6">

        <View
            android:id="@+id/foregroundDiastolic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD" />
    </FrameLayout>

</LinearLayout>
